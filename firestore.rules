
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Vehicles are public-readable for the landing page fleet view
    match /vehicles/{vehicleId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can modify vehicles
    }
    
    // App-specific collections require authentication for any access
    match /reservations/{reservationId} {
      allow read, write: if request.auth != null;
    }
    
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    match /documents/{documentId} {
      allow read, write: if request.auth != null;
    }
    
    match /contracts/{contractId} {
      allow read, write: if request.auth != null;
    }
    
    match /invoices/{invoiceId} {
      allow read, write: if request.auth != null;
    }
    
    match /expenses/{expenseId} {
      allow read, write: if request.auth != null;
    }
    
    match /maintenanceLogs/{logId} {
      allow read, write: if request.auth != null;
    }

    match /activityLogs/{logId} {
      allow read, write: if request.auth != null;
    }
  }
}
