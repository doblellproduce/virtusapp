rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read-only access to the vehicle fleet for the home page.
    // Writing (creating, updating, deleting) vehicles still requires authentication.
    match /vehicles/{vehicleId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }

    // All other collections (customers, reservations, users, etc.) are private
    // and require the user to be authenticated for any access.
    match /{path=**}/documents/{document} {
      allow read, write: if request.auth != null;
    }
  }
}