
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuth() {
      return request.auth != null;
    }
    
    function isRole(role) {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isAdmin() {
      return isRole('Admin');
    }
    
    function isSupervisor() {
      return isRole('Supervisor');
    }
    
    function isSecretary() {
      return isRole('Secretary');
    }
    
    function isStaff() {
      return isAdmin() || isSupervisor() || isSecretary();
    }

    // VEHICLES: Public can read, staff can write
    match /vehicles/{vehicleId} {
      allow get: if true; // Anyone can view a single vehicle
      allow list: if true; // Anyone can list all vehicles
      allow create, update, delete: if isStaff();
    }
    
    // All other collections are protected
    match /{collection}/{docId} {
      allow read, write: if isStaff();
    }
  }
}
