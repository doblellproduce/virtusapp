rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Vehicles can be read by anyone, but only written by authenticated users.
    match /vehicles/{vehicleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // All other collections are private and require authentication for any access.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
