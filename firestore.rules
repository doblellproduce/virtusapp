rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read-only access for the vehicle fleet to display on the homepage.
    // Write access is restricted to authenticated users (managed through backend logic).
    match /vehicles/{vehicleId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }

    // Secure all other collections by default.
    // Only authenticated users can read or write data in other parts of the database.
    match /{path=**}/documents/{documentId} {
      allow read, write: if request.auth != null;
    }
  }
}
