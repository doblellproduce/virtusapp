rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function getUserRole() {
      // Assumes user profiles are stored in a 'users' collection
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isStaff() {
      return isAuth() && getUserRole() in ['Admin', 'Supervisor', 'Secretary'];
    }
    
    function isAdmin() {
        return isAuth() && getUserRole() == 'Admin';
    }

    // Public access for vehicles
    match /vehicles/{vehicleId} {
      allow get, list: if true; // Everyone can see the vehicle fleet
      allow create, update, delete: if isStaff();
    }
    
    // Reservations can be managed by staff
    match /reservations/{reservationId} {
      allow read, write: if isStaff();
    }

    // Customers can be managed by staff
    match /customers/{customerId} {
      allow read, write: if isStaff();
    }

    // Invoices can be managed by staff
    match /invoices/{invoiceId} {
        allow read, write: if isStaff();
    }

    // Expenses can be managed by staff
    match /expenses/{expenseId} {
        allow read, write: if isStaff();
    }
    
    // Maintenance Logs can be managed by staff
    match /maintenanceLogs/{logId} {
        allow read, write: if isStaff();
    }
    
    // Documents can be managed by staff
    match /documents/{docId} {
        allow read, write: if isStaff();
    }

    // Reviews can be managed by Admins/Supervisors
    match /reviews/{reviewId} {
        allow read, write: if isAuth() && getUserRole() in ['Admin', 'Supervisor'];
    }

    // Activity Logs can only be written by authenticated users (via backend), read by Admin/Supervisor
    match /activityLogs/{logId} {
        allow create: if isAuth();
        allow read: if isAuth() && getUserRole() in ['Admin', 'Supervisor'];
    }

    // User profiles can be read by any staff, but only modified by Admins
    match /users/{userId} {
      allow read: if isStaff();
      allow write: if isAdmin();
    }
  }
}
