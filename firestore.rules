rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow public read access for vehicles, but restrict writes to authenticated users
    match /vehicles/{vehicleId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }
    
    // Default rule: secure all other collections by requiring authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
