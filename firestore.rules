rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to vehicles for the home page showcase
    match /vehicles/{vehicleId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write/edit/delete
    }

    // Secure all other collections by default.
    // This requires a user to be authenticated to access any other data.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
