rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to vehicles for the home page fleet display
    match /vehicles/{vehicleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Secure all other collections, allowing access only to authenticated users.
    // This covers users, reservations, invoices, expenses, etc.
    match /{path=**}/documents/{documentId} {
        allow read, write: if request.auth != null;
    }
  }
}