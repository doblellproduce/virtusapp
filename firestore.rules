rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Vehicles can be read by anyone, but only changed by authenticated users.
    match /vehicles/{vehicleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // All other collections require an authenticated user to read or write.
    // This is a secure default.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
