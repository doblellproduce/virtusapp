
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Vehicles can be read by anyone to be shown on the homepage.
    // Writing (creating, updating, deleting) requires authentication.
    match /vehicles/{vehicleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Customer documents can only be accessed by authenticated users.
    // This is a placeholder; more specific rules might be needed.
    match /customers/{customerId} {
       allow read, write: if request.auth != null;
    }

    // Any other collection requires an authenticated user to access.
    // This secures collections like reservations, users, invoices, etc.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
