
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read/write access to all collections for any authenticated user.
    // This is a secure starting point for an admin panel where all users are trusted.
    // You can refine these rules later for more granular control (e.g., per-role access).
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
