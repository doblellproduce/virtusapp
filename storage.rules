rules_version = '2';

// Rules for Firebase Storage
service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the storage bucket
    match /{allPaths=**} {
      // Allow reads from anyone (e.g., to display images)
      allow read;
      // Allow writes (uploads, deletes) only if the user is authenticated
      allow write: if request.auth != null;
    }
  }
}
