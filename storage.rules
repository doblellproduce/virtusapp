rules_version = '2';

// Caution: These rules grant read/write access to all authenticated users.
// In a production app with sensitive data, you should restrict access further.
// For example, you might only allow users to write to their own folder:
// allow write: if request.auth != null && request.auth.uid == userId;

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read and write access to all files for any authenticated user.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
