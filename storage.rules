rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files, so anyone can see vehicle images.
    match /{allPaths=**} {
      allow read;
    }

    // Allow write access (uploads) only for authenticated users inside their own folder.
    // This matches the path structure used in the VehiclesPage: `vehicles/{user.uid}/{fileName}`.
    match /vehicles/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
