
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files. This is necessary for displaying images.
    match /{allPaths=**} {
      allow read;
      
      // Only allow authenticated users to upload files.
      // This rule is checked on the actual upload, not the preflight request.
      allow write: if request.auth != null;
    }
  }
}

    