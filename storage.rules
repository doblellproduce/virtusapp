
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Helper function to check for admin/staff roles
    function isStaff() {
      return request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Supervisor', 'Secretary'];
    }

    // Vehicle images can be read by anyone, but only staff can upload/delete them.
    match /vehicles/{imageName} {
      allow read: if true;
      allow write: if isStaff();
    }

    // Inspection photos can only be created, read, and deleted by staff members.
    // The path contains the reservation ID, which can be used for more granular rules if needed later.
    match /inspections/{reservationId}/{imageName} {
      allow read, write, delete: if isStaff();
    }
    
    // Customer signatures follow the same logic as inspection photos.
    match /signatures/{reservationId}/{imageName} {
       allow read, write, delete: if isStaff();
    }

    // General documents can only be managed by staff.
    match /documents/{documentId}/{fileName} {
      allow read, write, delete: if isStaff();
    }
  }
}
