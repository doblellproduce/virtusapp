rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow staff members to read and write all files.
    // This rule checks if the user is authenticated and if their user document in Firestore
    // has a role of Admin, Supervisor, or Secretary.
    match /{allPaths=**} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Supervisor', 'Secretary'];
    }
  }
}
