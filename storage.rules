rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check for staff roles
    function isStaff() {
      return exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
             get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Supervisor', 'Secretary'];
    }

    // Vehicle images can be read by anyone
    match /vehicles/{allPaths=**} {
      allow read: if true;
      allow write: if isStaff();
    }

    // Documents, inspections, and signatures can only be accessed by staff
    match /documents/{allPaths=**} {
      allow read, write: if isStaff();
    }
    
    match /inspections/{allPaths=**} {
      allow read, write: if isStaff();
    }

    match /signatures/{allPaths=**} {
       allow read, write: if isStaff();
    }
    
    // Disallow any other path by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
