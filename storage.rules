
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files (e.g., vehicle images).
    match /{allPaths=**} {
      allow read: if true;
      // Allow write access (uploads/deletes) only to authenticated staff users.
      // This protects your storage from unauthorized uploads.
      allow write: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Supervisor', 'Secretary'];
    }
  }
}
