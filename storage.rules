rules_version = '2';

// Set rules to default to denying access
service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the bucket
    match /{allPaths=**} {
      // Allow reads to any user
      allow read;
      // Allow writes only if the user is authenticated
      allow write: if request.auth != null;
    }
  }
}
