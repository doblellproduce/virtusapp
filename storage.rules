rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Vehicle images are public for anyone to read.
    match /vehicles/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Inspection photos can be written by authenticated users, and read by them.
    // In a more secure app, you'd restrict read access to the specific user/admin.
    match /inspections/{allPaths=**} {
        allow read, write: if request.auth != null;
    }

    // Customer signatures can be written by authenticated users.
    // Reading should be highly restricted, but for now, we'll allow authenticated reads.
    match /signatures/{allPaths=**} {
        allow read, write: if request.auth != null;
    }
    
    // Documents can be written by authenticated users.
    match /documents/{allPaths=**} {
        allow read, write: if request.auth != null;
    }
  }
}